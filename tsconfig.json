{
    "compilerOptions": {
        "target": "es5",
        "sourceMap": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "module": "commonjs",
        "noImplicitAny": false,
        "outDir": "built",
        "rootDir": "."
    },
    "exclude": [
        "node_modules"
    ],

    "filesGlob": [
        "test/**/*.ts",
        "test/**/*.tsx",
        "!node_modules/**",
        "typings/index.d.ts",
        "custom-typings.d.ts"
    ],
    "compileOnSave": false,
    "atom": {
        "rewriteTsconfig": false
    }
}
