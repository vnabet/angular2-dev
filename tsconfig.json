{
    "compilerOptions": {
        "target": "es5",
        "sourceMap": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "module": "commonjs",
        "noImplicitAny": false,
        "outDir": "built",
        "rootDir": "."
    },
    "exclude": [
        "node_modules"
    ],
    "files": [
      "test/bootstrap.ts",
      "test/vendor.ts"
    ],
    "filesGlob": [
        "test/**/*.ts",
        "test/**/*.tsx",
        "!node_modules/**",
        "typings/index.d.ts"
    ],
    "compileOnSave": false,
    "atom": {
        "rewriteTsconfig": false
    }
}
